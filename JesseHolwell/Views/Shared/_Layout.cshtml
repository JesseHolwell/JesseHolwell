<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Jesse Holwell</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://unpkg.com/headroom.js@0.9.4/dist/headroom.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        @*<div class="navbar navbar-inverse">*@
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Jesse Holwell", "Index", "Home", new { area = "" }, new { @class = "navbar-brand navbtn-home" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="" id="navbtn-about" class="nav scroll-link">About</a>
                    </li>
                    <li>
                        <a href="" id="navbtn-portfolio" class="nav scroll-link">Portfolio</a>
                    </li>
                    <li>
                        <a href="" id="navbtn-career" class="nav scroll-link">Career</a>
                    </li>
                    <li>
                        <a href="" id="navbtn-contact" class="nav scroll-link">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Jesse Holwell</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/headroom")
    @Scripts.Render("~/bundles/core")
    @RenderSection("scripts", required: false)
</body>
</html>
